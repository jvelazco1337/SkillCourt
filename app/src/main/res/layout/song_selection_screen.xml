<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/high_scores"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/pi_image"
    tools:context="skillcourt.skillcourt.SongSelectionScreen">

    <EditText
        android:id="@+id/artistEditText"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_alignTop="@+id/artistTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:backgroundTint="@color/common_google_signin_btn_text_dark_default"
        android:ems="10"
        android:hint="Artist Name"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textColorHint="@color/common_google_signin_btn_text_dark_default"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/artistTextView"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:text="Artist Name"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        android:layout_marginTop="34dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/songTextView"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_below="@+id/artistEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:text="Song Name"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"/>

    <EditText
        android:id="@+id/songEditText"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_alignLeft="@+id/artistEditText"
        android:layout_alignStart="@+id/artistEditText"
        android:layout_below="@+id/songTextView"
        android:layout_marginTop="37dp"
        android:backgroundTint="@color/common_google_signin_btn_text_dark_default"
        android:ems="10"
        android:hint="Song Name"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textColorHint="@color/common_google_signin_btn_text_dark_default"/>

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:elevation="0dp"
        app:srcCompat="?attr/actionModeCloseDrawable"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/songTextView"
        android:layout_toStartOf="@+id/songTextView"/>

    <ImageButton
        android:id="@+id/playSongButton"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:srcCompat="@android:drawable/ic_media_play"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/songEditText"
        android:layout_alignEnd="@+id/songEditText"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp"/>

    <ImageButton
        android:id="@+id/stopSongButton"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:srcCompat="@android:drawable/checkbox_off_background"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>