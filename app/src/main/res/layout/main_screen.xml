<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/main_image"
    tools:context="skillcourt.skillcourt.MainScreen">

    <Button
        android:id="@+id/startButton"
        android:layout_width="228dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_column="0"
        android:layout_row="1"
        android:background="@android:drawable/checkbox_off_background"
        android:elevation="0dp"
        android:text="Start"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/songButton"
        android:layout_width="228dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/startButton"
        android:layout_alignStart="@+id/startButton"
        android:layout_below="@+id/startButton"
        android:layout_column="0"
        android:layout_marginTop="15dp"
        android:layout_row="5"
        android:background="@android:drawable/checkbox_off_background"
        android:elevation="0dp"
        android:text="Song Selection"
        android:textAlignment="center"/>

    <ImageButton
        android:id="@+id/shutdownPiButton"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:background="@android:drawable/editbox_background"
        app:srcCompat="@android:drawable/ic_lock_power_off"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <ImageButton
        android:id="@+id/rebootPiButton"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/shutdownPiButton"
        android:layout_toLeftOf="@+id/songButton"
        android:layout_toStartOf="@+id/songButton"
        android:background="@android:drawable/editbox_background"
        app:srcCompat="?android:attr/listChoiceIndicatorMultiple"/>


</RelativeLayout>
