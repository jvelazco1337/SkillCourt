<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/start_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/start_image"
    tools:context="skillcourt.skillcourt.StartScreen">

    <Button
        android:id="@+id/pauseButton"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@android:drawable/button_onoff_indicator_on"
        android:text="Pause Sequence"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:id="@+id/connectButton"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_above="@+id/disconnectButton"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="18dp"
        android:background="@android:drawable/button_onoff_indicator_on"
        android:text="Connect"/>

    <Button
        android:id="@+id/setSeqButton"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@android:drawable/button_onoff_indicator_on"
        android:text="Assign Sequence"
        android:layout_below="@+id/sendSeqButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="19dp"/>

    <Button
        android:id="@+id/sendSeqButton"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="22dp"
        android:background="@android:drawable/button_onoff_indicator_on"
        android:text="Send Sequence"
        android:layout_below="@+id/pauseButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:id="@+id/disconnectButton"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@android:drawable/button_onoff_indicator_off"
        android:text="Disconnect"/>

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="75dp"
        android:layout_height="50dp"
        app:srcCompat="?attr/actionModeCloseDrawable"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>


</RelativeLayout>
